<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_catDiaryFragment_groupContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        app:circularflow_radiusInDP="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cat_group_container" />

    <ImageView
        android:id="@+id/iv_catDiaryFragment_groupNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="@+id/iv_catDiaryFragment_groupContainer"
        app:layout_constraintTop_toTopOf="@+id/iv_catDiaryFragment_groupContainer"
        app:srcCompat="@drawable/cat_group_circle" />

    <TextView
        android:id="@+id/tv_catDiaryFragment_groupNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginTop="47dp"
        android:text="03"
        android:textColor="@color/dark_blue"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/iv_catDiaryFragment_groupContainer"
        app:layout_constraintTop_toTopOf="@+id/iv_catDiaryFragment_groupContainer" />

    <TextView
        android:id="@+id/tv_catDiaryFragment_groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="솔룩스 회식팟"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_catDiaryFragment_groupNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_catDiaryFragment_groupContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>