<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/theme_red"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/item_calendar_date_text"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|top"
        android:text="01"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textFontWeight="400"/>

    <androidx.cardview.widget.CardView
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_calendar_date_text"
        app:layout_constraintTop_toBottomOf="@+id/item_calendar_date_text">

        <ImageView
            android:id="@+id/iv_CalendarFragment2_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_calitem" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>