<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calendar.PostFragment"
    android:id="@+id/fragment_post"
    android:clipToOutline="true"
    android:background="@drawable/gradience_vertical"
    android:tag="fragment_post">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_PostFragment_writePost"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="19dp"
            android:src="@drawable/writepost"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="723dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rectangle_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_PostFragment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="36dp"
            android:gravity="top"
            android:text="2022년 1월 1일"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <View
            android:id="@+id/group_40"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="33dp"
            android:background="#00000000"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_PostFragment_date"
            app:layout_constraintTop_toTopOf="@+id/view"/>

        <ImageView
            android:id="@+id/group"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="80dp"
            android:background="#00000000"
            android:src="@drawable/cat_title"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <TextView
            android:id="@+id/spn_PostFragment_publicScope"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:gravity="top"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/group"
            app:layout_constraintStart_toEndOf="@+id/group"
            app:layout_constraintTop_toTopOf="@+id/group" />


        <View
            android:id="@+id/catline1"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/catline"
            app:layout_constraintBottom_toBottomOf="@+id/group_40"
            app:layout_constraintEnd_toEndOf="@+id/group_40"
            app:layout_constraintStart_toStartOf="@+id/group_40" />


        <View
            android:id="@+id/group_402"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:background="#00000000"
            app:layout_constraintEnd_toEndOf="@+id/group_40"
            app:layout_constraintStart_toStartOf="@+id/group_40"
            app:layout_constraintTop_toBottomOf="@+id/group_40" />

        <ImageView
            android:id="@+id/group2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="120dp"
            android:layout_marginStart="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            android:src="@drawable/cat_sub"
            />

        <TextView
            android:id="@+id/spn_PostFragment_category"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:gravity="top"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/group2"
            app:layout_constraintStart_toEndOf="@+id/group2"
            app:layout_constraintTop_toTopOf="@+id/group2" />


        <View
            android:id="@+id/catline2"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/catline"
            app:layout_constraintBottom_toBottomOf="@+id/group_402"
            app:layout_constraintEnd_toEndOf="@+id/group_402"
            app:layout_constraintStart_toStartOf="@+id/group_402" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_PostFragment"
            android:layout_width="330dp"
            android:layout_height="189dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/rounded_dialog"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="@+id/group_40"
            app:layout_constraintTop_toBottomOf="@+id/group_402">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/sliderViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <View
                android:id="@+id/viewFadingEdge"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_fading_edge"
                app:layout_constraintBottom_toBottomOf="@id/sliderViewPager" />

            <LinearLayout
                android:id="@+id/layoutIndicators"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@id/viewFadingEdge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <ScrollView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/cl_PostFragment"
            app:layout_constraintStart_toStartOf="@+id/cl_PostFragment"
            app:layout_constraintTop_toBottomOf="@+id/cl_PostFragment">
            <TextView
                android:id="@+id/tv_PostFragment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

