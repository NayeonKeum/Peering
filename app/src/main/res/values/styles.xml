<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_red</item>
        <item name="colorPrimaryDark">@color/theme_yellow</item>
        <item name="colorAccent">@color/theme_green</item>
    </style>

    <style name="Calendar"/>

    <style name="Calendar.HeaderDateText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#263238</item>
    </style>


    <style name="Calendar.CalendarViewStyle">
        <item name="dayHeight">44dp</item>
    </style>

    <style name="Calendar.ItemViewStyle">
        <item name="dayTextSize">14dp</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>


    <style name="TextViewStyle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/trans</item>
    </style>

    <style name="LineView">
        <item name="android:background">@color/trans</item>
    </style>

    <style name="LightColorTextViewStyle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:background">@color/trans</item>
    </style>
</resources>