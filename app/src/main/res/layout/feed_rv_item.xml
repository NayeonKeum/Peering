<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_FeedRVItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="12dp"
    android:orientation="horizontal"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_FeedRVItem_mainImg"
            android:src="@drawable/feed_main_img"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_FeedRVItem_Img"
                android:src="@drawable/feed_img"
                android:layout_width="75dp"
                android:layout_height="75dp" />
            <TextView
                android:id="@+id/tv_FeedRVItem_forimg"
                android:background="@drawable/bg_feed_img"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:text="+3"
                android:textColor="@color/theme_green"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_FeedRVItem_profileImg"
                android:src="@drawable/feed_profile"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/tv_FeedRVItem_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="hello_everyone"
                android:textSize="10sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_FeedRVItem_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="안녕하세요! 반갑습니다."
            android:textSize="12sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_FeedRVItem_detail"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@drawable/bg_feed_more_btn"
            android:layout_marginTop="20dp"
            android:text="more"
            android:textColor="@color/white"
            android:textSize="10sp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_FeedRVItem_emoji1"
                android:src="@drawable/emoji1"
                android:layout_width="16dp"
                android:layout_height="14dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_FeedRVItem_emoji2"
                android:src="@drawable/emoji2"
                android:layout_width="16dp"
                android:layout_height="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_FeedRVItem_emoji1"/>

            <ImageView
                android:id="@+id/iv_FeedRVItem_commentpink"
                android:src="@drawable/comment_pink"
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_FeedRVItem_commentblue"/>

            <ImageView
                android:id="@+id/iv_FeedRVItem_commentblue"
                android:src="@drawable/comment_blue"
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</LinearLayout>
