<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_FeedRVItem2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="12dp"
    android:orientation="horizontal"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_FeedRVItem2_mainImg"
            android:src="@drawable/feed_img"
            android:layout_width="150dp"
            android:layout_height="108dp" />
        <ImageView
            android:id="@+id/iv_FeedRVItem2_mainImg2"
            android:src="@drawable/feed_main_img"
            android:layout_width="150dp"
            android:layout_height="108dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_FeedRVItem2_profileImg"
                android:src="@drawable/feed_profile"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/tv_FeedRVItem2_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="hello_everyone"
                android:textSize="10sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_FeedRVItem_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2022-02-08"
            android:textSize="10sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_FeedRVItem2_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="안녕하세요! 반갑습니다."
            android:textSize="12sp"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>